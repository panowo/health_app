<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.ShowSportActivity">

    <TextView
        android:id="@+id/sport_time2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="时间"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/sport_date2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sport_date2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="50dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="日期"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sport_dur_time2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="36dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="时长"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sport_place2"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="地点"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/sport_dur_time"
        app:layout_constraintStart_toEndOf="@+id/sport_time2"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/list_sport"
        android:layout_width="427dp"
        android:layout_height="605dp"
        app:layout_constraintTop_toBottomOf="@+id/sport_time2"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="运动打卡记录"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>