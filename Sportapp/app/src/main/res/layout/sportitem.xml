<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/sport_date"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="日期"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sport_time"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="时间"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/sport_date"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sport_place"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="48dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="地点"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/sport_dur_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sport_dur_time"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="时长"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>